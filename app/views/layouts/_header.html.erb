          <%= link_to t(".product"), "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".share"), "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "#", class: "nav-link" do %>
            <i class="fa fa-shopping-cart"></i>
            <sup class="badge badge-pill badge-info">0</sup>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "#", class: "nav-link" do %>
            <i class="fa fa-search"></i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to image_tag("vi.png"), Settings.vietnamese, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to image_tag("en.png"), Settings.english, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".signin"), "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(".signup"), "#", class: "nav-link" %>
