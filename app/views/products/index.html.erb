<% provide :page, t(".page") %>
<div class="container-fluid">
  <div class="row row-fluid">
    <div class="col-md-2">
      <%= render "share/menu_admin" %>
    </div>
    <div class="col-md-10">
      <br>
      <div class="row">
        <div class="col-md-8"><%= render "share/filter", url: products_path %></div>
        <div class="col-md-4">
          <%= link_to t(".new"), new_product_path, class: "btn btn-success btn-block btn-lg" %>
        </div>
      </div>
      <br>
      <table class="table">
        <tr class="text-center">
          <th>#</th>
          <th><%= t ".image" %></th>
          <th><%= t ".name" %></th>
          <th><%= t ".category" %></th>
          <th><%= t ".price" %></th>
          <th><%= t ".discount" %></th>
          <th><%= t ".after_discount" %></th>
          <th><%= t ".sold_many" %></th>
          <th><%= t ".action" %></th>
        </tr>
        <%= render @products %>
      </table>
      <%= will_paginate @products %>
    </div>
  </div>
</div>
