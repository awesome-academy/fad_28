<div class="container-fluid">
  <div class="row row-fluid">
    <div class="col-md-2">
      <%= render "share/menu_admin" %>
    </div>
    <div class="col-md-10">
      <br>
      <div class="row">
        <div class="col-md-6"><%= render "share/filter", url: products_path %></div>
        <div class="col-md-4">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <%= link_to t(".all"), "#all", class: "nav-link active", "data-toggle": "tab" %>
            </li>
            <li class="nav-item">
              <%= link_to t(".food"), "#food", class: "nav-link", "data-toggle": "tab" %>
            </li>
            <li class="nav-item">
              <%= link_to t(".drink"), "#drink", class: "nav-link", "data-toggle": "tab" %>
            </li>
          </ul>
        </div>
        <div class="col-md-2">
          <%= link_to t(".new"), new_product_path, class: "btn btn-success btn-block btn-lg" %>
        </div>
      </div>
      <br>
      <div class="tab-content">
        <div class="tab-pane active" id="all">
          <div class="row">
            <%= render @products %>
          </div>
        </div>
        <div class="tab-pane fade" id="food">
          <div class="row">
            <%= render @foods if @foods %>
          </div>
        </div>
        <div class="tab-pane fade" id="drink">
          <div class="row">
            <%= render @drinks if @drinks %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
