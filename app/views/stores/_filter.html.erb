<%= form_with url: stores_path, method: :get, local: true do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: t(".name"),
      class: "form-control", value: params[:name] %>
  </div>
  <div class="form-group">
    <%= f.text_field :min_price, placeholder: t(".min"),
      class: "form-control", value: params[:min_price] %>
    <br>
    <%= f.text_field :max_price, placeholder: t(".max"),
      class: "form-control", value: params[:max_price] %>
  </div>
  <div class="form-group">
    <%= f.select :category_id, load_category, {prompt: t(".category")}, class: "form-control" %>
  </div>
  <div class="custom-control custom-checkbox mb-3">
    <%= f.check_box :sold_many, value: true, class: "custom-control-input" %>
    <%= f.label :sold_many, t(".highlight"), class: "custom-control-label" %>
  </div>
  <div class="custom-control custom-checkbox mb-3">
    <%= f.check_box :discount, value: true, class: "custom-control-input" %>
    <%= f.label :discount, t(".discount"), class: "custom-control-label" %>
  </div>
  <div class="form-group text-center">
    <%= f.submit t(".submit"), class: "btn btn-success" %>
  </div>
<% end %>
