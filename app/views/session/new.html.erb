<% provide :page, t(".page") %>
<div class="div-form">
  <h1 class="text-center"><%= t ".page"%></h1><br>
  <%= form_for :session do |f| %>
    <div class="form-group">
      <%= f.label t(".email") %>
      <%= f.text_field :email, class: "form-control form-control-lg" %>
    </div>
    <div class="form-group">
      <%= f.label t(".password") %>
      <%= f.password_field :password, class: "form-control form-control-lg" %>
    </div>
    <div class="component">
      <div class="custom-control custom-checkbox">
        <%= f.check_box :remember, class: "custom-control-input" %>
        <%= f.label :remember, t(".remember"), class: "custom-control-label" %>
      </div>
      <div><%= link_to t(".forgot"), "#" %></div>
    </div>
    <br>
    <div class="text-center">
      <%= f.submit t(".submit"), class: "btn btn-lg btn-success" %>
    </div>
  <% end %>
</div>
