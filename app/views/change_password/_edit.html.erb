<div class="profile">
  <h1 class="text-center"><%= t ".page" %></h1>
  <%= form_for @user, url: change_password_path(@user) do |f| %>
    <%= render "share/errors", object: @user %>
    <div class="form-group">
      <%= f.label t(".old_password") %>
      <%= f.password_field :old_password, class: "form-control form-control-lg" %>
    </div>
    <div class="form-group">
      <%= f.label t(".new_password") %>
      <%= f.password_field :password, class: "form-control form-control-lg" %>
    </div>
    <div class="form-group">
      <%= f.label t(".confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control form-control-lg" %>
    </div>
    <div class="text-center">
      <%= f.submit t(".submit"), class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
